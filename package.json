{
  "name": "repoprompt",
  "displayName": "RepoPrompt",
  "description": "将项目结构及文件内容转换为 XML 格式",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:repoprompt.generateXml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "repoprompt.generateXml",
        "title": "Repo Prompt For LLMs"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "repoprompt.generateXml",
          "when": "explorerViewletVisible",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "RepoPrompt",
      "properties": {
        "repoprompt.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "Maximum file size in bytes (default: 1MB)"
        },
        "repoprompt.rootTag": {
          "type": "string",
          "default": "project",
          "description": "Root XML tag name"
        },
        "repoprompt.includeComments": {
          "type": "boolean",
          "default": true,
          "description": "Include comments in file content"
        },
        "repoprompt.ignorePatterns": {
          "type": "array",
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            ".vscode/**"
          ],
          "description": "Glob patterns for files and folders to ignore"
        },
        "repoprompt.prompt": {
          "type": "string",
          "default": "",
          "description": "Default prompt to include in the XML output"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "pretest": "npm run compile && npm run lint",
    "coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^16.x",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.56.0",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^4.x"
  },
  "dependencies": {
    "minimatch": "^10.0.1"
  },
  "publisher": "decker502",
  "repository": {
    "type": "git",
    "url": "https://github.com/你的用户名/repoprompt.git"
  },
  "keywords": [
    "xml",
    "project structure",
    "llm",
    "gpt",
    "prompt"
  ],
  "license": "MIT"
}
