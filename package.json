{
  "name": "repoprompt",
  "displayName": "RepoPrompt",
  "description": "将项目结构及文件内容转换为 XML 格式",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:repoprompt.generateXml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "repoprompt.generateXml",
        "title": "生成项目结构 XML"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "repoprompt.generateXml",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "RepoPrompt",
      "properties": {
        "repoprompt.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "description": "最大文件大小（字节）"
        },
        "repoprompt.rootTag": {
          "type": "string",
          "default": "project",
          "description": "XML 根标签名称"
        },
        "repoprompt.includeComments": {
          "type": "boolean",
          "default": true,
          "description": "是否包含注释内容"
        },
        "repoprompt.ignorePatterns": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "node_modules/**",
            ".git/**",
            "dist/**",
            "build/**",
            "*.log"
          ],
          "description": "要忽略的文件和文件夹模式"
        },
        "repoprompt.includeContent": {
          "type": "boolean",
          "default": true,
          "description": "是否包含文件内容"
        },
        "repoprompt.chunkSize": {
          "type": "number",
          "default": 1,
          "description": "分块大小（字节）"
        },
        "repoprompt.outputPath": {
          "type": "string",
          "default": "${workspaceFolder}/project.xml",
          "description": "输出文件路径"
        },
        "repoprompt.copyToClipboard": {
          "type": "boolean",
          "default": true,
          "description": "是否自动复制到剪贴板"
        }
      }
    },
    "keybindings": [
      {
        "command": "repoprompt.generateXml",
        "key": "ctrl+shift+x",
        "mac": "cmd+shift+x",
        "when": "explorerViewletVisible"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "pretest": "npm run compile && npm run lint",
    "coverage": "jest --coverage",
    "clean": "rm -rf dist coverage",
    "build": "tsc -p ./"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@types/node": "^16.18.122",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.19.0",
    "@typescript-eslint/parser": "^8.19.0",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^8.57.1",
    "glob": "^10.4.5",
    "jest": "^29.7.0",
    "minimatch": "^10.0.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "minimatch": "^10.0.1"
  },
  "publisher": "decker502",
  "repository": {
    "type": "git",
    "url": "https://github.com/你的用户名/repoprompt.git"
  },
  "keywords": [
    "xml",
    "project structure",
    "llm",
    "gpt",
    "prompt"
  ],
  "license": "MIT"
}
