{
    "files.exclude": {
        "out": false,
        "dist": false
    },
    "search.exclude": {
        "out": true,
        "dist": true
    },
    "typescript.tsc.autoDetect": "off",
    "repoprompt": {
        "rootTag": "project",
        "includePath": true,
        "recursive": true,
        "fileSizeThreshold": 1048576,
        "chunkSize": 1048576,
        "includeComments": true,
        "copyToClipboard": false,
        "outputPath": "${workspaceFolder}/project.xml",
        "ignorePatterns": [
            "**/node_modules/**",
            "**/.git/**",
            "**/.vscode/**"
        ]
    }
}
